@model IEnumerable<Student>;

<div class="container pt-5">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Firstname</th>
                <th scope="col">Lastname</th>
                <th scope="col">Age</th>
                <th scope="col">Superpower</th>
                <th scope="col">
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Student item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.Age</td>
                    <td>@item.Superpower</td>
                    <td>
                        <a href="/student/info/@item.Id">View Detailed Info</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
